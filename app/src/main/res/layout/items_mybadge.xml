<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:background="@color/gray"
    android:paddingTop="10dp"
    android:paddingHorizontal="20dp"
    >

    <ImageView
        android:id="@+id/myBadge_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@color/purple_700"
        />

    <TextView
        android:id="@+id/myBadge_title"
        app:layout_constraintLeft_toLeftOf="@id/myBadge_Image"
        app:layout_constraintRight_toRightOf="@id/myBadge_Image"
        app:layout_constraintTop_toBottomOf="@id/myBadge_Image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="중요한건 꺾이지 않는 마음"
        android:textAlignment="center"
        android:textSize="16sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>