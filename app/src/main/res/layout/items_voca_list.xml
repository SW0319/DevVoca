<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.devvoca.VocaListAdapter.ViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/items_voca_list_vocaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:text="Nice"/>

        <TextView
            android:id="@+id/items_voca_list_vocaSpelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/items_voca_list_vocaName"
            app:layout_constraintTop_toTopOf="@id/items_voca_list_vocaName"
            app:layout_constraintBottom_toBottomOf="@id/items_voca_list_vocaName"
            android:text="[발음 기호]"/>

        <TextView
            android:id="@+id/items_voca_list_translate"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/items_voca_list_vocaName"
            app:layout_constraintBottom_toBottomOf="@id/items_voca_list_vocaName"
            android:textSize="20sp"
            android:text="v.동사;n.명사"/>

        <TextView
            android:id="@+id/items_voca_list_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/items_voca_list_vocaName"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="He is so nice!"/>

        <TextView
            android:id="@+id/items_voca_list_exampleTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/items_voca_list_example"
            app:layout_constraintTop_toTopOf="@id/items_voca_list_example"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="그는 너무 멋져!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray"
            android:layout_marginRight="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>