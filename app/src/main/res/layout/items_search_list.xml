<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/items_voca_list_vocaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:text="Nice"/>

        <TextView
            android:id="@+id/items_voca_list_vocaSpelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/items_voca_list_vocaName"
            app:layout_constraintTop_toTopOf="@id/items_voca_list_vocaName"
            app:layout_constraintBottom_toBottomOf="@id/items_voca_list_vocaName"
            android:text="[발음 기호]"/>

        <TextView
            android:id="@+id/items_voca_list_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/items_voca_list_vocaName"
            android:textSize="20sp"
            android:text="v.동사;n.명사"/>



        <ImageView
            android:src="@drawable/baseline_star_24"
            android:id="@+id/items_voca_list_exampleTranslate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/items_voca_list_vocaName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray"
            android:layout_marginRight="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>